{
    "compilerOptions": {
      "target": "es5",
      "rootDir": "./src",
      "outDir": "./lib",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "declaration": true,
      "declarationDir": "./",
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "typeRoots": ["./src/@types", "./node_modules/@types"],
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react"
    },
    "include": [
      "src"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
  }
